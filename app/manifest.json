{
  "manifest_version": 2,
  "name": "Twitter original images (miki-shirusi)",
  "short_name": "TOI",
  "description": "Display the images in its original size on twitter.com when clicked tweet.",
  "version": "1.0",

  "icons": {
    "16" : "icon-16.png",
    "19" : "icon-19.png",
    "38" : "icon-38.png",
    "128": "icon-128.png"
  },

  "permissions": [ "tabs", "http://twitter.com/*"],
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "content_scripts": [
    {
       "matches": ["https://twitter.com/*"],
       "css"    : ["main.css"],
       "js"     : ["jquery-3.0.0.min.js", "main.js"]
    }
  ],
  "web_accessible_resources": ["toi-icon.png"]  
}